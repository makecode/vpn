extends ../base
block title
  |VPN
block main
  div.app
    div.main
      div.main-bg
      div.notification.red
        span.notification__text <strong>Trial Mode</strong>: Disconnect in 00:00 min.
        div.notification__label
          span.notification__descr Remove Time Limit
          span.notification__star.icon.star_blue

      div.main-wrap

        div.switch-wrap.disconnected
          span.switch-wrap__name Disconnected
          div.switch
            label.switch__label
            input.switch__input(type='checkbox')
            span.switch__name.is-on On
            span.switch__name Off
            span.switch__round
              span.icon.is-disconnect

        include ../partials/dropdown.pug

    div.footer
      ul.list
        li.list__el
          div.data
            span.data__name Virtual IP:
            span.data__quantity -
        li.list__el
          div.data
            span.data__name Received:
            span.data__quantity -
        li.list__el
          div.data
            span.data__name Sent:
            span.data__quantity -
